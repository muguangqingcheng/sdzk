<filter module="utils">
export default {
    computeContainerRect: function (statusBarHeight, navigationBarHeight, backgroundColor) {
        return [
            'height:' + (statusBarHeight + navigationBarHeight + 6) + 'px',
            'padding:' + (statusBarHeight - 6) + 'px 0 0',
            'background-color:' + backgroundColor
        ].join(';');
    },
    computeContentRect: function (statusBarHeight, navigationBarHeight) {
        return [
            'height:' + (navigationBarHeight + 12) + 'px'
        ].join(';');
    },
    computeCustomArea: function (safeWidth) {
        return [
            'width:' + safeWidth + 'px'
        ].join(';');
    }
}
</filter>

<view class="container" style="{{utils.computeContainerRect(statusBarHeight, navigationBarHeight, backgroundColor)}}">
    <view class="content-area" style="{{utils.computeContentRect(statusBarHeight, navigationBarHeight)}}">
        <view class="custom-area" style="{{utils.computeCustomArea(safeWidth)}}">
            <slot></slot>
        </view>
    </view>
</view>
